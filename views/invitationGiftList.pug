extends layout

block content
    h2.naslov.center-align Poziv za event : #{event.name}
    .row 
                .col.s12.m6
                    h4.naslov Slobodni pokloni:
                    each eg in availableGifts
                        .card.blue-grey.darken-1
                            .card-content.white-text
                                span.card-title Naziv poklona: #{eg.name}
                                p
                                    b Opis poklona:
                                    span #{eg.description}
                                p 
                                    b Naziv radnje: 
                                    span #{eg.store}

    
                .col.s12.m6
                    h4.naslov Kupljeni pokloni:
                    each sg in soldGifts
                        .card.red.lighten-2
                            .card-content.white-text
                                span.card-title Naziv poklona: #{sg.name}
                                p
                                    b Opis poklona:
                                    span #{sg.description}
                                p 
                                    b Naziv radnje: 
                                    span #{sg.store}


    
    .row
        .col.m6
            a.waves-effect.waves-light.btn.col.m12(href="/myinvitations") Nazad
