extends layout

block content
        h2.naslov.center-align Dodavanje poklona
        .row
            .col.s6.offset-s3
                if availableGifts
                    each eg in availableGifts
                        .card.blue-grey.darken-1
                            .card-content.white-text
                                span.card-title Naziv poklona: #{eg.name}
                                p
                                    b Opis poklona:
                                    span #{eg.description}
                                form(action="/addgifttogiftlist", method="post")
                                    input(type="hidden", name="itemId" value=eg.id)
                                    input(type="hidden", name="eventId" value=eventId)
                                    input(type="hidden", name="_csrf" value=_csrf)
                                    br
                                    div.center-align
                                        input.waves-effect.waves-light.btn(type="submit", value="Dodaj poklon")
                if availableGifts.length==0
                    h6.naslov 
                        i Trenutno nema dostupnih artikala u ovoj radnji.
                hr
                a.waves-effect.waves-light.btn.col.m6(href="/addgifttoevent/"+eventId) Nazad