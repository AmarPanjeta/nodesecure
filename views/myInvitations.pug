extends layout

block content
    h2.naslov Moji pozivi

    if myinvitations
        .row
            .col.s12.m6
            each inv in myinvitations
                .card.blue-grey.darken-1
                    .card-content.white-text
                        span.card-title Naziv eventa: #{inv.name}
                        p
                            b Opis eventa:
                            span #{inv.description}
                        p 
                            b Tip eventa: 
                            span #{inv.type}
                        p 
                            b Datum eventa: 
                            span #{inv.date}
                        .card-action
                            a(href="/invitationgifts/"+ inv.id) Prikazi poklone

    if myinvitations.length==0
        h4.naslov.center-align 
            i Trenutno nemate evenata na koje ste pozvani.


        