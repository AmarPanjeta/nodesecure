extends layout

block content
    h2.naslov Moji eventi

    if events
        .row
            .col.s12.m6
            each ev in events
                .card.blue-grey.darken-1
                    .card-content.white-text
                        span.card-title Naziv eventa: #{ev.name}
                        p
                            b Opis eventa:
                            span #{ev.description}
                        p 
                            b Tip eventa: 
                            span #{ev.type}
                        p 
                            b Datum eventa: 
                            span #{ev.date}
                        .card-action
                            a(href="/eventgifts/"+ ev.id) Prikazi poklone
                            a(href="/invitations/"+ ev.id) Prikazi goste
    else
        h3.naslov.center-align Trenutno nemate vlastitih evenata

        